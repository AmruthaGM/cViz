<style>

html,body {
	background: url(/public/assets/m/img/bg/loginbg-f3.jpg) no-repeat center scroll;
    background-size:100% 60%;
}
 
@media screen and (min-width: 768px){
    .topad{ padding-top: 100px;}
}
</style>

<div class="container">
<div class="col-sm-6 col-sm-offset-2 pull-left">
<br>
    <h1 class="login"><span class="fa fa-sign-in"></span>Login</h1>
<span class="pull-right text-small login">ver:
        <%= locals.app_info.version %>:<%= locals.app_info.gitHash %>
        </span>


    <% if (message.length > 0) { %>
        <div class="alert alert-danger"><%= message %></div>
    <% } %>

    <!-- LOGIN FORM --><br/><br/><br/>
    <div class="topad">
    <form action="/login"  method="post">
    <br>
        <div class="form-group">
            <label>Email</label>
            <input type="text" class="form-control" name="email">
        </div>
        <div class="form-group">
            <label>Password</label>
            <input type="password" class="form-control" name="password">
        </div>

        <button type="submit" class="btn btn-warning btn-lg">Login</button>
    </form>
    </div>
  
  

<br/>
    

</div>
</div>
