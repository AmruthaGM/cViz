<!doctype html>
<html>
<head>
    <title>Node Authentication</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">

    <style>
    html,body {

    background: url(/public/assets/m/img/bg/loginbg-f3.jpg) no-repeat center scroll;
  background-size:100% 60%;


    }

    </style>
 <script src="/public/assets/js/validation.js"></script>  
</head>
<body>
<div class="container">
<div class="col-sm-6 col-sm-offset-2 pull-left">

    <h1 class="login"><span class="fa fa-sign-in"></span> Signup</h1>

    <% if (message.length > 0) { %>
        <div class="alert alert-danger"><%= message %></div>
    <% } %>

    <!-- LOGIN FORM --><br><br><br>
    <form  name='registration' method="post" onSubmit="return formValidation();" action="/signup" >
        <div class="form-group">
            <label>First Name</label>
            <input type="text" class="form-control" name="firstname">
        </div>
        <div class="form-group error" name="fname1" id="fname1"></div>
        <div class="form-group">
            <label>Last Name</label>
            <input type="text" class="form-control" name="lastname">
        </div>
        <div class="form-group error" name="lname1" id="lname1"></div>
        <div class="form-group">
            <label>Email</label>
            <input type="text" class="form-control" name="email">
        </div>
        <div class="form-group error" name="email1" id="email1"></div>
        <div class="form-group">
            <label>Password</label>
            <input type="password" class="form-control" name="password">
        </div>
        <div class="form-group error" name="password1" id="password1"></div>
        <button type="submit" class="btn btn-warning btn-lg">Signup</button>
    </form>
    <hr>
    
    <p>Already have an account? <a href="/login">Login</a> Or go <a href="/">home</a>.</p>

</div>
</div>
</body>
</html>