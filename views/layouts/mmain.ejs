<!DOCTYPE html>

<!--[if lt IE 7]>      <html lang="en" ng-app="baseApp" class="no-js lt-ie9 lt-ie8 lt-ie7"> <![endif]-->
<!--[if IE 7]>         <html lang="en" ng-app="baseApp" class="no-js lt-ie9 lt-ie8"> <![endif]-->
<!--[if IE 8]>         <html lang="en" ng-app="baseApp" class="no-js lt-ie9"> <![endif]-->

<!--[if gt IE 8]><!--> <html lang="en" <%-appName%> class="no-js"> <!--<![endif]-->

<head>

	<% include ../partials/head.ejs%>
	<!-- standard assets  -->
	<%-locals.stdAssets%>
	<!-- application assets  -->
	<%-locals.appAssets%>

</head>

<body>
	<div id="wrapper">

		<!-- Sidebar -->
		<div id="sidebar-wrapper">
			<div class="paddg">
				<%if (locals.user !== undefined) { %>
				<div class="menu-profile-pic"><img src="<%=locals.user.avatar%>"></div>
				<div class="menu-profile-name header">
					<%=locals.user.name.first%> <%=locals.user.name.last%><br/>
					<span style="font-size: 80%;"><%=locals.user.jobTitle%></span><br/>
					<span style="font-size: 70%;"><%=locals.user.get('groups')%></span>
				</div>
				<% } %></div>
				<div class="sidebar-nav">
					<ul>
						<li class="sidebar-item">
							<a  href="/m/main/"><i class="menu-icon fa fa-home fonticon"></i>Welcome</a>
						</li>
						<li class="sidebar-brand sidebar-item">
							<a href="/"><i class="menu-icon fa fa-tachometer fonticon"></i>Dashboard</a>
						</li>
						<li class="sidebar-item">
							<a href="/m/visits/"><i class="menu-icon fa fa-calendar fonticon"></i>Visits</a>
						</li>
						<li class="sidebar-item">
							<a href="/m/visits/#/agenda"><i class="menu-icon fa fa-list fonticon"></i>Agenda</a>
						</li>
						<li class="sidebar-item">
							<a href="/m/facts/"><i class="menu-icon fa fa-line-chart fonticon"></i>Facts</a>
						</li>
						<li class="sidebar-item">
							<a href="/m/visits/#/contacts"><i class="menu-icon fa fa-phone fonticon"></i>Contacts</a>
						</li>
						<li class="sidebar-item">
							<a href="/m/main/#/execBios"><i class="menu-icon fa fa-users fonticon"></i>Executive Bios</a>
						</li>
						<li class="sidebar-item">
							<a href="/m/main/#/feedback"><i class="menu-icon fa fa-comments fonticon"></i>Feedback</a>
						</li>
						<li class="sidebar-item">
							<a href="/logout"><i class="menu-icon fa fa-sign-out fonticon"></i>Logout</a>
						</li>

					</ul>
				</div>
			</div>
			<!-- /#sidebar-wrapper -->

			<!-- Page Content -->
			<div id="page-content-wrapper">
				<div class="container">

					<!-- Fixed navbar :: Start-->
					<nav class="navbar navbar-custom navbar-fixed-top">

						<div class="navbar-header">

							<a id="menu-toggle" href="#menu-toggle" class="navbar-brand">
								<i class="fa fa-bars"></i>
							</a>
							<a  href="/" class="navbar-brand">
								Visit Portal</a>
							</div>
							<div id="navbar" class="navbar-inverse side-collapse in">
								<%if (locals.user != null) { %>
								<% include ../partials/menuSecure.ejs %>
								<% } else { %>
								<% include ../partials/menu.ejs %>
								<% } %>

							</div>
						</nav>
						<!-- fixed navebar :: End -->
						<div class="notify">
							<!-- application notification area, required for angular-growl-2-->
							<div growl></div>
						</div>


						<div class="starter-template">
							<%- body%>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<!-- /#page-content-wrapper -->
</div> <!-- end of page wrapper -->

<!-- Menu Toggle Script -->
<script>
	$("#menu-toggle").click(function(e) {
		e.preventDefault();
		$("#wrapper").toggleClass("toggled");
	});
</script>

</body>

</html>
